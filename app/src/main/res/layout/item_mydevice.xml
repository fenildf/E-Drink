<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_mydevice"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/item_press_color"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_mydevice"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:src="@drawable/ic_cup" />

    <TextView
        android:id="@+id/tv_mydevice_id"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/img_mydevice"
        android:gravity="center_vertical"
        android:text="smart_cup-0001"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_mydevice_unbind"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@color/red"
        android:text="解绑"
        android:textColor="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/divide_line" />

</RelativeLayout>